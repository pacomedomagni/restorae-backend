# =============================================================================
# Restorae Backend Environment Variables
# =============================================================================
# Copy this file to .env for local development
# Copy this file to .env.prod for production (on your server)

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# For local dev (matches docker-compose.yml):
DATABASE_URL="postgresql://restorae:restorae_dev@localhost:5432/restorae?schema=public"

# For production, use the container name as host:
# DATABASE_URL="postgresql://restorae:YOUR_SECURE_PASSWORD@postgres:5432/restorae?schema=public"

# Password for PostgreSQL (used by docker-compose.prod.yml)
POSTGRES_PASSWORD=restorae_dev

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET="change-this-to-a-secure-random-string"
JWT_REFRESH_SECRET="change-this-to-another-secure-random-string"

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development

# -----------------------------------------------------------------------------
# RevenueCat (In-App Purchases)
# -----------------------------------------------------------------------------
REVENUECAT_API_KEY=

# -----------------------------------------------------------------------------
# Apple Sign In
# -----------------------------------------------------------------------------
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# Google Sign In
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_ID_IOS=
GOOGLE_CLIENT_ID_ANDROID=
